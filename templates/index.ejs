<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi"
      crossorigin="anonymous"
    />
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3"
      crossorigin="anonymous"
    ></script>
  </head>
  <body onload="submitform()">
    <div>
      <div class="container text-center mt-5 mb-5">
        <h1>SnAPI</h1>
        <p>A Free API for Marvel Snap</p>
      </div>
      <div class="container">
        <div class="input-group mb-3">
          <span class="input-group-text" id="basic-addon3">
            https://snapi.lol/api/
          </span>
          <input
            type="text"
            class="form-control"
            aria-describedby="basic-addon3"
            placeholder="cards"
            name="search"
            id="search"
          />
          <button
            class="btn btn-outline-secondary"
            id="button-addon2"
            onclick="submitform()"
          >
            Request
          </button>
        </div>
      </div>
      <div class="container text-center mt-5 mb-5">
        <h3>Result</h3>
        <pre
          id="results-box"
          style="
            height: 340px;
            overflow-y: scroll;
            display: block;
            padding: 40px;
            margin: 0 0 20px;
            font-size: 15px;
            line-height: 1.42857143;
            word-break: break-all;
            word-wrap: break-word;
            color: #3a3f44;
            background-color: #f5f5f5;
            border: 1px solid #cccccc;
            border-radius: 4px;
            box-sizing: border-box;
            text-align: left;
          "
        ></pre>
      </div>
    </div>
    <script type="text/javascript">
      const submitform = async () => {
        let search = document.getElementById("search").value || "cards";
        console.log(search);

        // let promise = await fetch("http://localhost:3000/api/" + search);
        const response = await fetch("https://snapi.lol/api/" + search, {
          headers: {
            "Access-Control-Allow-Origin": "*",
          },
        }).then((res) => res.json());
        console.log(response);
        document.getElementById("results-box").innerHTML = JSON.stringify(
          response,
          null,
          4
        );
      };
    </script>
  </body>
</html>
